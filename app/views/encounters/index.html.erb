<p id="notice"><%= notice %></p>

<h1>Encounters</h1>

<table>
  <thead>
    <tr>
      <th>Visit no</th>
      <th>Admitted at</th>
      <th>Discharged at</th>
      <th>Location</th>
      <th>Room</th>
      <th>Bed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encounters.each do |encounter| %>
      <tr>
        <td><%= encounter.visit_no %></td>
        <td><%= encounter.admitted_at %></td>
        <td><%= encounter.discharged_at %></td>
        <td><%= encounter.location %></td>
        <td><%= encounter.room %></td>
        <td><%= encounter.bed %></td>
        <td><%= link_to 'Show', patient_encounter_path(@patient, encounter) %></td>
        <td><%= link_to 'Edit', edit_patient_encounter_path(@patient, encounter) %></td>

        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Encounter', new_patient_encounter_path %>
